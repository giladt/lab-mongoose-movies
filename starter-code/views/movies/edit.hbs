<h1>Edit a movie</h1>
<form action="/movies/{{movie._id}}/edit" method="POST">

  <label for="name">Title</label><br>
  <input type="text" name="title" id="title" value="{{movie.title}}"><br>
  <br>

  <label for="occupation">Genre</label><br>
  <input type="text" name="genre" id="genre" value="{{movie.genre}}"><br>
  <br>

  <label for="plot">The plot</label><br>
  <input type="text" name="plot" id="plot" value="{{movie.plot}}"><br>
  <br>
  <br>
  <select name="cast" id="cast" multiple>
    {{#each cast}}
      <option value="{{_id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
    {{/each}}
  </select>
  <br>
  <br>

  <button type="submit">Update</button>
</form>
<br><hr>
<a href="/movies">Back to the list</a>