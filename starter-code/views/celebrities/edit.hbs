<h1>Edit a celebrity</h1>
{{#with celebrity}}
<form action="/celebrities/{{_id}}/edit" method="POST">

  <label for="name">Name</label><br>
  <input type="text" name="name" id="name" value="{{name}}"><br>
  <br>

  <label for="occupation">Occupation</label><br>
  <input type="text" name="occupation" id="occupation" value="{{occupation}}"><br>
  <br>

  <label for="catchPhrase">Catch Phrase</label><br>
  <input type="text" name="catchPhrase" id="catchPhrase" value="{{catchPhrase}}"><br>
  <br>
  <br>

  <button type="submit">Update</button>
</form>
{{/with}}
<br><hr>
<a href="/celebrities">Back to the list</a>